<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView android:id="@+id/menu_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/menu_btn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#cc000000"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/item_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_motor_meter"
            android:background="@drawable/menu_item_selected"
            android:scaleType="center"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/item_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_navigation"
            android:background="@drawable/menu_item_selected"
            android:scaleType="center"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/item_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_settings"
            android:background="@drawable/menu_item_selected"
            android:scaleType="center"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <iebicycle.android.com.iebicycle.layout.PagingGridView
        android:id="@+id/menu_item_container"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:visibility="gone"
        android:background="#cc505050"
        android:layout_alignParentBottom="true" />
</RelativeLayout>